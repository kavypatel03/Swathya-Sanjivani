<!DOCTYPE html>
<html>
<head>
    <title>Admin Login - Swasthya Sanjivani</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
</head>
<body>
    <%- include('partials/nav') %>
    
    <div class="min-h-screen bg-gray-100 flex items-center justify-center">
        <div class="bg-white rounded shadow p-6 w-full mb-20 max-w-md ">
            <h2 class="text-2xl font-bold text-center mb-6">Admin Login</h2>

            <% if (typeof messages !== 'undefined' && messages.error) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline"><%= messages.error %></span>
                </div>
            <% } %>

            <form action="/admin/login" method="POST">
                <div class="mb-4">
                    <label>
                        Enter Mobile Number <span class="text-red-500">*</span>
                    </label>
                    <input
                        type="tel"
                        name="mobile"
                        placeholder="+91-94260-24009"
                        class="w-full p-2 border rounded mt-1"
                        required
                    />
                </div>

                <div class="mb-4">
                    <label>
                        Enter Password <span class="text-red-500">*</span>
                    </label>
                    <input
                        type="password"
                        name="password"
                        placeholder="Enter Your Password"
                        class="w-full p-2 border rounded mt-1"
                        required
                    />
                </div>

                <div class="mb-6">
                    <a href="/admin/forgot-password" class="text-blue-500">
                        Forgot Password?
                    </a>
                </div>

                <button
                    type="submit"
                    style="background-color: #0e606e"
                    class="w-full flex justify-center text-white py-2 rounded"
                >
                    Login
                </button>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <% if (typeof messages !== 'undefined') { %>
        <script>
            <% if (messages.error) { %>
                toastr.error('<%= messages.error %>');
            <% } %>
            <% if (messages.success) { %>
                toastr.success('<%= messages.success %>');
            <% } %>
        </script>
    <% } %>
</body>
</html>